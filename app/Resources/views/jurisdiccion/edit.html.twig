{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">
    <h1>Jurisdiccion edit</h1>

    {{ form_start(edit_form,{'attr': {'class': 'well'}}) }}
      <div class="form-group">
        {{form_row(edit_form.name, {'attr': { 'class': 'form-control', 'placeholder': 'Nombre' }})}}
        <input type="submit" value="Editar" />
      </div>

    {{ form_end(edit_form) }}

    <ul class="list-inline">
        <li>
            <a class="btn btn-default" href="{{ path('jurisdiccion_index') }}"><span class=" glyphicon glyphicon-chevron-left"></span> Volver a la Lista </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            
              <button class="btn btn-danger" type="submit" id="delete-link">
                <span class="glyphicon glyphicon-remove"></span> Eliminar
              </button>

            {{ form_end(delete_form) }}
        </li>
    </ul>

  </div>

</div>

{% endblock %}
{% block page_javascripts %}
    <script src="{{ asset('js/cuenta.js') }}"></script>
{% endblock %}
